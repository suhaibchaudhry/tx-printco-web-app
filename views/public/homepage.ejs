<%
var slides =

[{
	name: 'Business Cards',
	body: "You only get one chance at a first impression.\
				<br />\
				Make sure yours is worth keeping.",
	link: {
		title: 'Buy Now',
		href: '#'
	},
	image: 'business-cards.png',
	w: '150',
	h: '100'
},
{
	name: 'Business Cards 2',
	body: "You only get one chance at a first impression.\
				<br />\
				Make sure yours is worth keeping.",
	link: {
		title: 'Buy Now',
		href: '#'
	},
	image: 'business-cards.png',
	w: '150',
	h: '100'
}];
%>

<div class="slideshow">
	<%
		slides.map(function(e, i) {
	%>
	<div class="slide slide-<%= i+1 %><%= (i ==  0) ? ' active-slide' : '' %>" id="slide-<%= i+1 %>">
		<div class="slide-inner">
			<div class="region region-left">
				<div class="slide-image">
					<img src="/images/products/<%= e.image %>" alt="<%= e.name %>" height="<%= e.h %>" width="<%= e.w %>">
				</div>
			</div>
			<div class="region region-right">
				<h2><%= e.name %></h2>
				<p><%- e.body %></p>
				<a href="<%= e.link.href %>"><%= e.link.title %></a>
			</div>
		</div>
	</div>
	<% }) %>
	<div class="menu">
		<ul>
			<% slides.map(function(e, i) { %>
				<li><a class="slide-<%= i+1 %>" href="#slide-<%= i+1 %>"><%= e.name %></a></li>
			<% }) %>
		</ul>
	</div>
</div>

<div class="top-content">
	<div class='featured-products lowercase'>
		<h2 class='header-title'>Featured Products</h2>
			<ul id='featured-products-items'>
				<%
					//Object List
					[{
						image: 'business-cards.png',
						name: 'Business Cards',
						w: '150',
						h: '100'
					},
					{
						image: 'flyers-brochures.png',
						name: 'Flyers & Brochures',
						w: '184',
						h: '139'
					},
					{
						image: 'posters.png',
						name: 'Posters',
						w: '180',
						h: '126'
					},
					{
						image: 'banner-stand.png',
						name: 'Stand-Up Banners',
						w: '85',
						h: '194'
					},
					{
						image: 'postcards.png',
						name: 'Postcards',
						w: '150',
						h: '182'
					},
					{
						image: 'stickers.png',
						name: 'Stickers',
						w: '200',
						h: '71'
					},
					{
						image: 'presentation-folder.png',
						name: 'Presentation Folders',
						w: '160',
						h: '197'
					},
					{
						image: 'plastic-cards.png',
						name: 'Plastic Cards',
						w: '150',
						h: '100'
					}].map(function(e, i) {
				%>
					 <li class="item-<%= i+1 %>">
						 <div class="product-image"><img src="/images/products/<%= e.image %>" alt="<%= e.name %>" height="<%= e.h %>" width="<%= e.w %>"></div>
 						 <div class="product-name"><%= e.name %><div>
					 </li>
			 <% }) %>

			 <%
				//Simple List
				[].map(function(e, i) {
				 	%>
				 	<li class="item-<%= i+1 %>"><%= e %></li>
			 <% }) %>
		</ul>
	</div>
</div>
<div class="middle-content lowercase">
	<div class='middle-content-container'>
		<div class='need-help-designing'>
			<h2 class='header-title'>Need help designing?</h2>
				<div class="middle-content-one block">
					<h3 class='header-title'>Designing your own?</h3>
